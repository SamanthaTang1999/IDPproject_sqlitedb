<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.AddVacRecordController">
   <children>
      <VBox alignment="CENTER" layoutX="167.0" layoutY="14.0" prefHeight="400.0" prefWidth="500.0" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label text="Add Vaccination Record" />
            <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0" spacing="40.0">
               <children>
                  <Label text="Today Date :" />
                  <DatePicker fx:id="datePicker_todayDate" editable="false" promptText="Today Date" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0" spacing="40.0">
               <children>
                  <Label text="Injection :" />
                  <RadioButton fx:id="radioButton_1st" mnemonicParsing="false" onAction="#selectInjectionRadioButton" text="1st">
                     <toggleGroup>
                        <ToggleGroup fx:id="injection" />
                     </toggleGroup>
                  </RadioButton>
                  <RadioButton fx:id="radioButton_2nd" mnemonicParsing="false" onAction="#selectInjectionRadioButton" text="2nd" toggleGroup="$injection" />
                  <RadioButton fx:id="radioButton_3rd" mnemonicParsing="false" onAction="#selectInjectionRadioButton" text="3rd &amp; above" toggleGroup="$injection" />
               </children>
            </HBox>
            <ComboBox fx:id="comboBox_vacType" editable="true" prefWidth="150.0" promptText="Type of Vaccine" />
            <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0" spacing="40.0">
               <children>
                  <Label text="Next Appointment Date :" />
                  <DatePicker fx:id="datePicker_nextDate" editable="false" promptText="Next Appointment Date" />
               </children>
            </HBox>
            <Button mnemonicParsing="false" onAction="#saveVacRecord" text="Save" />
         </children>
         <padding>
            <Insets left="10.0" right="10.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
